<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events>
      <event name="item:created">
        <handler type="FieldFallback.Processors.Events.FieldFallBackItemCreatedHandler, FieldFallback.Processors" method="OnItemSaved">
        </handler>
      </event>
      <event name="item:deleted">
        <handler type="FieldFallback.Processors.Events.FieldFallBackItemDeletedHandler, FieldFallback.Processors" method="OnDeleteItem">
        </handler>
      </event>
    </events>
	<settings>
	 <!-- Location of default templates that are used by the Fallback Items-->
      <setting name="Fallback.Default.Template.Location" value ="/sitecore/templates/FieldFallbackDemo/DefaultTemplatesDemoFolder"/>

      <!-- Location of the default items that will be created after the templates are created-->
      <setting name="Fallback.Default.Item.Location" value ="/sitecore/Content/FieldFallbackDemo/DefaultItemsDemoFolder"/>
      
      <!-- Database to process events in-->
      <setting name="Database" value="master"/>
    </settings>
  </sitecore>
</configuration>